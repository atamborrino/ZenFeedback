# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index
GET     /:name                      controllers.Mobile.takePartIn(name: String)
GET     /:name/ws                   controllers.Mobile.stream(name: String)

GET     /rooms/:name/results        controllers.Application.results(name: String)

GET     /rooms/:name/resultsWS      controllers.Application.resultsWS(name: String)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
